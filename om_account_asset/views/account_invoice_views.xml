            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="before">
                <field string="Asset Category" name="asset_category_id" force_save="1"
                       domain="[('type','=','purchase')]" context="{'default_type':'purchase'}"/>
            </xpath>
